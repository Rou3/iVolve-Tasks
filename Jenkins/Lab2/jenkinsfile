pipeline {
    agent any

    environment {
        DOCKERHUB_USER = 'rabdelrahman3332'
        IMAGE_NAME = 'jenkins-app'
        IMAGE_TAG = 'latest'
        DOCKER_IMAGE = "${DOCKERHUB_USER}/${IMAGE_NAME}:${IMAGE_TAG}"
    }

    stages {

        stage('Clone Repo') {
            steps {
                git branch: 'main', url: 'https://github.com/Ibrahim-Adel15/Jenkins_App.git'
            }
        }

        stage('Build App') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $DOCKER_IMAGE .'
            }
        }

        stage('Push Image') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'dockerhub-creds',
                    usernameVariable: 'USER',
                    passwordVariable: 'PASS'
                )]) {
                    sh '''
                    echo $PASS | docker login -u $USER --password-stdin
                    docker push $DOCKER_IMAGE
                    '''
                }
            }
        }

        stage('Create Deployment YAML') {
            steps {
                sh '''
                cat <<EOL > deployment.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: jenkins-app
spec:
  replicas: 1
  selector:
    matchLabels:
      app: jenkins-app
  template:
    metadata:
      labels:
        app: jenkins-app
    spec:
      containers:
      - name: jenkins-app
        image: placeholder-image
        ports:
        - containerPort: 8080
EOL
                '''
            }
        }

        stage('Update Deployment') {
            steps {
                sh "sed -i 's|image:.*|image: $DOCKER_IMAGE|' deployment.yaml"
            }
        }

        stage('Deploy to K8s') {
            steps {
                withCredentials([file(credentialsId: 'kubeconfig-minikube', variable: 'KUBECONFIG')]) {
                    sh 'export KUBECONFIG=/var/lib/jenkins/kubeconfig'
                    sh 'kubectl apply -f deployment.yaml'
                    sh 'kubectl expose deployment jenkins-app --type=NodePort --port=8080 || true'
                    sh 'minikube service jenkins-app --url || true'
}

                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished'
        }
        success {
            echo 'SUCCESS üéâ'
        }
        failure {
            echo 'FAILED ‚ùå'
        }
    }
